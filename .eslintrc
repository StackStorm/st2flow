parser: babel-eslint
env:
  jasmine: false
  node: true
  mocha: true
  browser: true
  builtin: true
  es6: true
ecmaFeatures:
  jsx: true
  modules: true
  classes: true
rules:
  block-scoped-var: 0
  camelcase: 0
  consistent-return: 0
  comma-spacing: 0
  curly:
    - 2
    - all
  eqeqeq:
    - 2
  strict:
    - 2
    - global
  guard-for-in: 2
  new-cap: 0
  no-bitwise: 2
  no-caller: 2
  no-empty: 2
  no-extend-native: 2
  no-extra-parens: 0
  no-irregular-whitespace: 2
  no-iterator: 0
  no-lone-blocks: 0
  no-mixed-requires: 0
  no-new: 0
  no-redeclare: 0
  no-sequences: 2
  no-shadow: 0
  no-undef: 2
  no-underscore-dangle: 0
  no-unused-vars: 2
  no-unused-expressions: 0
  no-use-before-define: 0
  no-with: 2
  space-infix-ops: 0
  quotes:
    - 2
    - single
  valid-typeof: 0
  wrap-iife:
    - 0
    - inside
plugins:
  - react
